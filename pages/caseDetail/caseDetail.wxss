.case-banner {
  width:100%;
  height:300rpx;
  display: block;
}

.section {
  background-color: #fff;
  margin:30rpx 0;
  padding:30rpx;
}
.case-title {
  line-height: 80rpx;
  border-bottom: 1rpx solid #ddd;
  margin-bottom: 30rpx;
  font-size: 32rpx;
}

.case-info{
  font-size: 30rpx;
   color: #8B8B8D;
   line-height: 60rpx;
}

.case-detail {
  background:#fff;
  padding:30rpx;
}

.case-detail{

  padding:30rpx;
}

.detail-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.case-detail .shot-line {
  height: 3rpx;
  width: 28rpx;
  background: #F24D44;
  margin:20rpx;
} 

.case-detail image {
  width:100%;
  margin-bottom: 30rpx;
}

.case-detail text {
  
font-size: 30rpx;
color: #000000;
letter-spacing: 0;
line-height: 51rpx;
}