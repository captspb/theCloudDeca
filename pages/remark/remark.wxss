.remark {
  font-size: 30rpx;
  color: #000000;
  line-height: 48rpx;
}
.remark-images {
  margin:20rpx 0 20rpx -20rpx;
}
.remark-images image {
  float: left;
  display: block;
  width:180rpx;
  height:130rpx;
  margin:0 0 20rpx 20rpx;
}

.remark-section {
  padding-right:0;
}

.case-header {
  font-size: 34rpx;
border-bottom:1rpx solid #dddddd;
height:100rpx;
margin-bottom:50rpx;

}

navigator {
font-size:26rpx;
color:#8B8B8D;
}

.toDelete {
  position: relative;
}

.cover {
  display: none;
  width: 100%;
  height: 100%;
  background-color:rgba(0,0,0,0.5);
  position: absolute;
  top:0;
  left: 0;
}

.delete {
  display: none;
  position: absolute;
  top:-40rpx;
  right: -250rpx;
  width:300rpx;
  height: 60rpx;
  text-align: center;
  background: white;
  line-height: 60rpx;
  box-shadow: 0 0 15rpx #888888;
  font-size: 30rpx;
  z-index: 99;

}


.toDelete .cover {
  display: block;
}

.toDelete .delete {
  display: block;
}

.point .star:first-child {
  margin-left:0;
}